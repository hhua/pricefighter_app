<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	>
  	
  		<ImageView android:id="@+id/StartupBackground"
		android:background="@drawable/bg2" android:scaleType="center" 
		android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageView>
		
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  > 
  
  <!-- organize Image Switcher from left to right --> 		 
  	<ImageSwitcher 
  		android:id="@+id/switchervs"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_centerInParent="true"
  		>
  	</ImageSwitcher> 
  	<ImageSwitcher 
  		android:id="@+id/switcher1"
  		android:layout_width="100dp"
  		android:layout_height="100dp"
  		android:layout_marginRight="100dp"
  		android:layout_marginTop="30dp"
  		android:layout_toLeftOf="@id/switchervs"
  		>
  		</ImageSwitcher>
  	<ImageSwitcher 
  		android:id="@+id/switcher2"
  		android:layout_width="100dp"
  		android:layout_height="100dp"
  		android:layout_marginLeft="100dp"
  		android:layout_marginTop="30dp"
  		 android:layout_toRightOf="@id/switchervs"
  		>
  	</ImageSwitcher>

  	<TextSwitcher android:id="@+id/txt_price1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/switchervs"
		android:layout_below="@id/switcher1"/>
		
    <TextSwitcher android:id="@+id/txt_time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toLeftOf="@id/switchervs"
		android:layout_below="@id/txt_price1"/>
		
    <TextSwitcher android:id="@+id/txt_location1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toLeftOf="@id/switchervs"
		android:layout_below="@+id/txt_time1"/>
		
    <TextSwitcher android:id="@+id/txt_condition1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toLeftOf="@id/switchervs"
		android:layout_below="@id/txt_location1"/> 
		
	<ImageSwitcher 
  		android:id="@+id/addToWatch1"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="140dp"
  		android:layout_marginBottom="12dp"
  		 android:layout_below="@id/txt_condition1"
  		>
  	</ImageSwitcher>  

  	<TextSwitcher android:id="@+id/txt_price2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/switchervs"
		android:layout_below="@id/switcher2"/>
		
    <TextSwitcher android:id="@+id/txt_time2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/switchervs"
		android:layout_below="@id/txt_price2"/>
		
    <TextSwitcher android:id="@+id/txt_location2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/switchervs"
		android:layout_below="@+id/txt_time2"/>
		
    <TextSwitcher android:id="@+id/txt_condition2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/switchervs"
		android:layout_below="@id/txt_location2"/>    
		
	<ImageSwitcher 
  		android:id="@+id/addToWatch2"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="150dp"
  		android:layout_toRightOf="@id/switchervs"
  		android:layout_below="@id/txt_condition2"
  		>
  	</ImageSwitcher>  
  	
</RelativeLayout>
</FrameLayout>